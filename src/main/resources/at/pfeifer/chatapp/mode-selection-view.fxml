<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="modeSelectionScene" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="250.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.pfeifer.chatapp.controller.ModeSelectionController">
   <children>
      <VBox fx:id="sceneContent" alignment="CENTER" minHeight="-Infinity" prefHeight="250.0" prefWidth="300.0">
         <children>
            <HBox fx:id="modeSelectorBox" alignment="CENTER" minHeight="-Infinity" prefHeight="50.0" prefWidth="300.0" spacing="20.0">
               <children>
                  <RadioButton fx:id="hostSelector" mnemonicParsing="false" selected="true" text="Host">
                     <toggleGroup>
                        <ToggleGroup fx:id="mode" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="joinSelector" mnemonicParsing="false" text="Join" toggleGroup="$mode" />
               </children>
            </HBox>
            <HBox fx:id="inputHBox" alignment="CENTER" minHeight="-Infinity" prefHeight="153.0" prefWidth="300.0">
               <children>
                  <VBox fx:id="inputList" alignment="CENTER" minHeight="0.0" prefHeight="61.0" prefWidth="395.0">
                     <children>
                        <HBox fx:id="dataInputBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="userInput" minWidth="-Infinity" onAction="#performAction" prefHeight="34.0" prefWidth="275.0" promptText="Input port to host on: e.g. 8080" />
                           </children>
                        </HBox>
                        <HBox fx:id="usernameInputBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="usernameInput" minWidth="-Infinity" onAction="#performAction" prefHeight="34.0" prefWidth="275.0" promptText="Your username:" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <HBox fx:id="passwordInputBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="passwordInput" minWidth="-Infinity" onAction="#performAction" prefHeight="34.0" prefWidth="275.0" promptText="Password or empty:" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox fx:id="actionButtonBox" alignment="CENTER" minHeight="-Infinity" prefHeight="50.0" prefWidth="300.0">
               <children>
                  <Button fx:id="actionButton" mnemonicParsing="false" onAction="#performAction" prefHeight="25.0" prefWidth="133.0" text="Host a lobby" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
